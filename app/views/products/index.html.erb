<h1>INDEX</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
      <tr>
        <th><%= p.name %></th>
        <td><%= p.price %></td>
        <td><%= p.description %></td>
        <td><%= image_tag p.image %></td>
        <td>
          <%= link_to 'Edit', edit_product_path(p), class:"btn btn-success" %>
        </td>
        <td>
          <%= link_to 'Delete', product_path(p), class:"btn btn-danger", data: {confirm: 'Estas seguro?', method: :delete} %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'form' %>

